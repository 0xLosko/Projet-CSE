{% extends './security/backoffice/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/backoffice/bo_manage_home.css') }}">
{% endblock %}

{% block content %}
    <div class="home-con">
        {{ form_start(form) }}
            {{ form_widget(form.textContent, {'value' : homeContent}) }}
            {{ form_rest(form) }}
            <input type="submit" value="Modifier">
        {{ form_end(form) }}
        {% for message in app.flashes('success') %}
            <div class="form-row">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}