{% extends './security/backoffice/base.html.twig' %}

{% block content %}
    <div class="home-con">
        <h1>Gérer les partenaires</h1>
        <a class="add-btn" href="{{ path('app_partner_new') }}">Ajouter un partenaire</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Lien</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for partner in partners %}
                <tr>
                    <td>{{ partner.name }}</td>
                    <td>{{ partner.description }}</td>
                    <td>{{ partner.link }}</td>
                    <td>
                        <div class="btn-con">
                            {{ include('security/backoffice/manage_partners/_delete_form.html.twig') }}
                            <a href="{{ path('app_partner_edit', {'id': partner.id}) }}">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de résultats trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
